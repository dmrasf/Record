<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="#F7EED6"
              android:orientation="horizontal" tools:ignore="UseCompoundDrawables">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/item_day_image_view" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@android:color/background_dark"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/item_day_image_view"
            android:text="12345"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/item_day_text_view"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="10sp"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:textStyle="italic"
            android:text="12345"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/item_day_date_text_view" tools:ignore="SmallSp"/>

</RelativeLayout>
