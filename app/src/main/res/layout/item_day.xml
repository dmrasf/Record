<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:background="@android:color/darker_gray"
              android:layout_marginTop="16dp"
              android:orientation="horizontal" tools:ignore="UseCompoundDrawables">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:id="@+id/item_day_image_view"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/item_day_image_view"
            android:textStyle="bold"
            android:text="12345"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/item_day_text_view"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:gravity="top"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:textStyle="bold"
            android:text="12345"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/item_day_date_text_view" tools:ignore="SmallSp"/>

</RelativeLayout>
