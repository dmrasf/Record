<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="50dp"
        android:orientation="horizontal" >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_orange_light">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_alignParentStart="true"
                android:id="@+id/item_record_main"
                android:orientation="vertical"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="1"
                    android:textSize="15sp"
                    android:gravity="bottom"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/item_record_text_view"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="1"
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/item_record_date_text_view" tools:ignore="SmallSp"/>

        </LinearLayout>
        <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:id="@+id/item_record_add_button"
                android:background="@drawable/tubiao_5"
                android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="50dp"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:layout_height="50dp">

        <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/item_record_remove_button"
                android:background="@drawable/remove"/>

    </LinearLayout>

</LinearLayout>

